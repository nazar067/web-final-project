@model IEnumerable<Hotels.Models.Hotel>

<input type="hidden" value="@ViewBag.HotelsId" name="HostelsId"/>
@foreach(var hotel in Model)
{
    <div style=" height: 400px; width:600px; float:left">
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active" id="img">
                    <img class="d-block w-100" src="@hotel.Img" alt="Первый слайд">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="@hotel.Img1" alt="Второй слайд">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="@hotel.Img2" alt="Третий слайд">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="@hotel.Img3" alt="Третий слайд">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="@hotel.Img4" alt="Третий слайд">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="@hotel.Img5" alt="Третий слайд">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="@hotel.Img6" alt="Третий слайд">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    <div style="margin-left:600px; background-color:antiquewhite; border-radius:10px">
        @hotel.Description
    </div>
    <div style="margin-top:20px">
        @hotel.Stars Stars
    </div>
    <div style="margin-top:20px">
        Country: @hotel.Contry
    </div>
    <div style="margin-top:20px; margin-bottom:20px">
        Price: @hotel.Price$
    </div>
    <form action="~/Home/Buy/@hotel.Id">
        <button style="width:100px; background-color:lime; border-radius:5px">Buy</button>
    </form>
}