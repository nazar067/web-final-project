@model IEnumerable<Hotels.Models.Hotel>

<input type="hidden" value="@ViewBag.HotelsId" name="HostelsId" />
@foreach (var hotel in Model)
{
    <div class="hotels">
        <div id="gallery-@hotel.Id" class="gallery" style="display: block;">
            <a href="@hotel.Img" data-lightbox="gallery-@hotel.Id">
                <img src="@hotel.Img" alt="Изображение 1" class="gallery-item" />
            </a>
            <a href="@hotel.Img1" data-lightbox="gallery-@hotel.Id">
                <img src="@hotel.Img1" alt="Изображение 2" class="gallery-item" />
            </a>
            <a href="@hotel.Img2" data-lightbox="gallery-@hotel.Id">
                <img src="@hotel.Img2" alt="Изображение 3" class="gallery-item" />
            </a>
            <a href="@hotel.Img3" data-lightbox="gallery-@hotel.Id">
                <img src="@hotel.Img3" alt="Изображение 4" class="gallery-item" />
            </a>
            <a href="@hotel.Img4" data-lightbox="gallery-@hotel.Id">
                <img src="@hotel.Img4" alt="Изображение 5" class="gallery-item" />
            </a>
            <a href="@hotel.Img5" data-lightbox="gallery-@hotel.Id">
                <img src="@hotel.Img5" alt="Изображение 6" class="gallery-item" />
            </a>
            <a href="@hotel.Img6" data-lightbox="gallery-@hotel.Id">
                <img src="@hotel.Img6" alt="Изображение 7" class="gallery-item" />
            </a>
        </div>

        <div id="carousel-@hotel.Id" class="carousel slide" data-ride="carousel" style="display: none;">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="@hotel.Img" alt="Первый слайд">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="@hotel.Img1" alt="Второй слайд">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="@hotel.Img2" alt="Третий слайд">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="@hotel.Img3" alt="Четвёртый слайд">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="@hotel.Img4" alt="Пятый слайд">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="@hotel.Img5" alt="Шестой слайд">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="@hotel.Img6" alt="Седьмой слайд">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carousel-@hotel.Id" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carousel-@hotel.Id" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    <div class="toggle-button">
        <button class="btn btn-primary" onclick="toggleGalleryCarousel('gallery-@hotel.Id', 'carousel-@hotel.Id', this)">
            Switch to Carousel
        </button>
    </div>
    <div class="descrip">
        @hotel.Description
    </div>
    <div class="hotel-info">
        <div>
            @for (int i = 0; i < @hotel.Stars; i++)
            {
                <span style="color: gold;">&#9733;</span>
            }
            @for (int i = @hotel.Stars; i < 5; i++)
            {
                <span style="color: gray;">&#9733;</span>
            }
        </div>
        <div>
            @if (@hotel.Contry == "USA")
            {
                <img src="https://flagcdn.com/w40/us.png" alt="USA Flag" style="width: 20px; height: 15px; vertical-align: middle;" />
            }
            else if (@hotel.Contry == "France")
            {
                <img src="https://flagcdn.com/w40/fr.png" alt="France Flag" style="width: 20px; height: 15px; vertical-align: middle;" />
            }
            else if (@hotel.Contry == "Italy")
            {
                <img src="https://flagcdn.com/w40/it.png" alt="Italy Flag" style="width: 20px; height: 15px; vertical-align: middle;" />
            }
            else if (@hotel.Contry == "Ukraine")
            {
                <img src="https://flagcdn.com/w40/ua.png" alt="Ukraine Flag" style="width: 20px; height: 15px; vertical-align: middle;" />
            }
            else if (@hotel.Contry == "Egypt")
            {
                <img src="https://flagcdn.com/w40/eg.png" alt="Egypt Flag" style="width: 20px; height: 15px; vertical-align: middle;" />
            }
            else if (@hotel.Contry == "Qatar")
            {
                <img src="https://flagcdn.com/w40/qa.png" alt="Qatar Flag" style="width: 20px; height: 15px; vertical-align: middle;" />
            }
            else if (@hotel.Contry == "Singapore")
            {
                <img src="https://flagcdn.com/w40/sg.png" alt="Singapore Flag" style="width: 20px; height: 15px; vertical-align: middle;" />
            }
            else if (@hotel.Contry == "Monaco")
            {
                <img src="https://flagcdn.com/w40/mc.png" alt="Monaco Flag" style="width: 20px; height: 15px; vertical-align: middle;" />
            }
            Country: @hotel.Contry
        </div>
        <div>
            Price: @hotel.Price$
        </div>
    </div>
    <form action="~/Home/Buy/@hotel.Id">
        <button class="buy-button">Buy</button>
    </form>
</div>
}
